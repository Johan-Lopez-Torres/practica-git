<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:id="@+id/LLleer_usuario"
    tools:context=".view.ui.Activities.LeerUsuariosActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="633dp"
        android:background="@color/green"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">




        <!-- RecyclerView para mostrar la lista de usuarios -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recUsuarios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <!-- Contenedor para mostrar el ProgressBar y una capa de fondo -->
        <FrameLayout
            android:id="@+id/rlArtistas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@android:color/white" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black" />

        </FrameLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
