<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.ui.Activities.SplashScreenActivity"
    android:id="@+id/main"
    android:background="#FFFFFF">

    <!-- Formas decorativas en la esquina superior derecha -->
    <ImageView
        android:id="@+id/decorative_shape_top"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/forma"
        android:scaleType="fitXY" />

    <!-- Formas decorativas en la esquina inferior izquierda -->
    <ImageView
        android:id="@+id/decorative_shape_bottom"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/forma"
        android:scaleType="fitXY" />

    <!-- Texto centrado -->
    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Trash Track"
        android:textSize="44sp"
        android:textColor="#00FF7F"
        android:textStyle="bold"
        android:gravity="center" />

</RelativeLayout>
