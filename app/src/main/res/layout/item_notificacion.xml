<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <TextView
        android:id="@+id/tvDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Día"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        />

    <ImageView
        android:id="@+id/tvimgnotificacion"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:background="@drawable/shape_aro_icono_notificacion"
        app:layout_constraintTop_toBottomOf="@+id/tvDia"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="16dp"
        />

    <!-- Texto existente -->
    <TextView
        android:id="@+id/tvnotificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Notificación"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvimgnotificacion"
        app:layout_constraintTop_toTopOf="@+id/tvDia" />
    <TextView
        android:id="@+id/tvDes_Notificación"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="Des_Notificación"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvnotificacion"
        app:layout_constraintStart_toEndOf="@+id/tvimgnotificacion"
        />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|bottom"
        android:padding="4dp"
        android:text="Fecha"
        android:textColor="#3F81F5"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvDes_Notificación"
        app:layout_constraintStart_toEndOf="@+id/tvimgnotificacion"

        />
    <View
        android:id="@+id/tvbarra"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#14FF85"
        app:layout_constraintTop_toBottomOf="@+id/tvFecha"
        app:layout_constraintStart_toEndOf="@+id/tvimgnotificacion"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

